<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="tip_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="title">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="tip">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="phrase_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="phrase">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="author">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="app_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">104dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
    </style>

    <style name="welcome_phrase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="welcome_phrase2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">92dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <style name="start_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">92dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
